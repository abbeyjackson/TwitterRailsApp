<p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.title %></td>
        <td><%= tweet.body %></td>
        <td><% if @user %>
          <%= link_to tweet.user_id, user_tweets_path(tweet.user) %>
          <% else %>
            <%= tweet.user_id %>
          <% end %>
        </td>
        <td><%= link_to 'Show', [tweet.user, tweet] %></td>
        <td><%= link_to 'Edit', edit_user_tweet_path(tweet.user, tweet) %></td>
        <td><%= link_to 'Destroy', [tweet.user, tweet], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @user %>
  <%= link_to 'New Tweet', new_user_tweet_path(@user) %>
<% end %>
